---
import { Icon } from "astro-icon/components";

interface Props {
    language: string;
}

const { language } = Astro.props;
---

<li class="py-[2px]">
    <a
        class="rounded-md dark:bg-black bg-white dark:hover:bg-primary-dark-gray/15 hover:bg-primary-dark-gray/60 whitespace-no-wrap inline-flex justify-start items-center w-full gap-x-2 px-3 py-2"
        href="/"
    >
        <Icon name={language} />

        {language}
    </a>
</li>
